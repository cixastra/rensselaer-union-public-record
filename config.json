{
  "systemName": "RPI Union LeMS",
  "version": "2.0.0",
  "currentSession": "Fall 2024",
  "branches": [
    "senate",
    "executive"
  ],
  "bodies": {
    "senate": [
      "Student Life",
      "Academic Affairs",
      "Facilities & Services",
      "Financial Affairs",
      "Rules & Elections"
    ],
    "executive": [
      "Budget Committee",
      "Appointments"
    ]
  },
  "sessions": [
    {
      "name": "Fall 2024",
      "startDate": "2024-08-26",
      "endDate": "2024-12-20",
      "active": true
    },
    {
      "name": "Spring 2025",
      "startDate": "2025-01-13",
      "endDate": "2025-05-16",
      "active": false
    },
    {
      "name": "Summer 2025",
      "startDate": "2025-05-19",
      "endDate": "2025-08-15",
      "active": false
    }
  ],
  "billNumberingFormat": "{session}-{number:03d}",
  "statusWorkflow": [
    "draft",
    "submitted",
    "in-committee",
    "on-floor",
    "passed",
    "failed"
  ],
  "voteTypes": [
    "committee",
    "floor",
    "final"
  ],
  "amendmentTypes": [
    "friendly",
    "hostile",
    "substitute"
  ],
  "roles": {
    "registrar": {
      "name": "Joint Union Registrar",
      "permissions": [
        "canCreateBills",
        "canEditBills",
        "canRecordVotes",
        "canManagePermissions",
        "canManageTemplates",
        "canManageBranches",
        "canSetImpact"
      ]
    },
    "elections": {
      "name": "Elections Commission",
      "permissions": [
        "canManagePermissions",
        "canManageTemplates",
        "canManageBranches"
      ]
    },
    "head-branch": {
      "name": "Head of Branch",
      "permissions": [
        "canRecordVotes",
        "canManageBranches"
      ]
    },
    "head-body": {
      "name": "Head of Body/Committee",
      "permissions": [
        "canRecordVotes"
      ]
    },
    "senator": {
      "name": "Senator",
      "permissions": [
        "canCreateBills",
        "canEditBills"
      ]
    },
    "viewer": {
      "name": "Viewer",
      "permissions": []
    }
  },
  "userRoles": {
    "cixastra": "registrar"
  },
  "templateCategories": [
    "Standard Bill",
    "Funding Bill",
    "Constitutional Amendment",
    "Bylaw Amendment",
    "Resolution"
  ],
  "tags": [
    "budget",
    "clubs",
    "housing",
    "academics",
    "facilities",
    "elections",
    "constitutional",
    "bylaw",
    "emergency",
    "administrative"
  ],
  "maintainers": [
    "Joint Union Registrar",
    "Student Senate Web Technologies Group",
    "Rensselaer Union Sysadmins"
  ],
  "contactInfo": {
    "registrar": "registrar@rpi.edu",
    "senate": "senate@rpi.edu",
    "union": "union@rpi.edu"
  },
  "externalLinks": {
    "constitution": "https://rpi.app.box.com/v/rpisg",
    "bylaws": "https://rpi.app.box.com/v/rpisg",
    "rulesAndProcedures": "https://rpi.app.box.com/v/rpisg",
    "unionWebsite": "https://union.rpi.edu"
  },
  "features": {
    "githubIntegration": true,
    "discordWebhooks": true,
    "qrCodeGeneration": true,
    "pdfExport": true,
    "versionControl": true,
    "rollCallVoting": true,
    "amendments": true,
    "templates": true,
    "crossReferences": true,
    "impactStatements": true,
    "attachments": true
  },
  "storage": {
    "legislationPath": "legislation/{branch}/{year}/{bill-number}.json",
    "templatesPath": "templates/{template-name}.json",
    "configPath": "config.json"
  }
}
